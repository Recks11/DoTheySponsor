{
   "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      // this enables stricter inference for data properties on `this`
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
         "@/*": [
            "src/*"
         ]
      }
   }
}